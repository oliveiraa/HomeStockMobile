%h1 Estoque
= fields_for @stock do |f|
	%fieldset(data-role="fieldcontain")
		= f.label :name 
		= f.text_field :name 
	%fieldset(data-role="fieldcontain")
		= f.label :description
		= f.text_area :description		

-if not @stocksvm.empty?
	%table 
		%thead
			%tr
				%th Nome do Produto
				%th Quantidade Dispon√≠vel
		%tbody
		-@stocksvm.each do |s|
			%tr
				%td= s["produto"]
				%td= s["quantidade"]

%a(href=stocks_path data-role='button' data-ajax='false')
